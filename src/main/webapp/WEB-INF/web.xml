<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    <!-- Servlets -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.smd.sulamerigames.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>com.smd.sulamerigames.servlets.SignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/Signup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginAdmServlet</servlet-name>
        <servlet-class>com.smd.sulamerigames.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupAdmServlet</servlet-name>
        <servlet-class>com.smd.sulamerigames.servlets.SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>com.smd.sulamerigames.servlets.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginAdmServlet</servlet-name>
        <url-pattern>/LoginAdm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupAdmServlet</servlet-name>
        <url-pattern>/SignupAdm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/Update</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <!-- Filtros -->
    <filter>
        <filter-name>validateAdm</filter-name>
        <filter-class>com.smd.sulamerigames.filters.ValidateFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>validateAdm</filter-name>
        <url-pattern>/Login</url-pattern>
    </filter-mapping>
</web-app>